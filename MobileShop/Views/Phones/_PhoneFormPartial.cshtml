@model AddPhoneFormModel

<div class="container">
    <div class="row">
        <div class="col-4">
            <h2 class="heading-margin">@ViewBag.Title</h2>
            <form method="post">
                <div class="form-group">
                    <label asp-for="BrandId"></label>
                    <select asp-for="BrandId" class="form-control">
                        @foreach (var brand in Model.Brands)
                        {
                            <option value="@brand.Id">@brand.Name</option>
                        }
                    </select>
                </div>
                 
                <div class="form-group">
                    <label asp-for="Model">Model</label>
                    <input asp-for="Model" class="form-control">
                    <span asp-validation-for="Model" class="small text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CategoryId"></label>
                    <select asp-for="CategoryId" class="form-control">
                        @foreach (var category in Model.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <label asp-for="Color">Color</label>
                    <input asp-for="Color" class="form-control">
                    <span asp-validation-for="Color" class="small text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ImageUrl">Image</label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="Your url here...">
                    <span asp-validation-for="ImageUrl" class="small text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Overview">Overview</label>
                    <textarea asp-for="Overview" rows="4" class="form-control"></textarea>
                    <span asp-validation-for="Overview" class="small text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Price">Price</label>
                    <input asp-for="Price" class="form-control">
                    <span asp-validation-for="Price" class="small text-danger"></span>
                </div>

                <input class="btn btn-primary" type="submit" value="Save" />
            </form>
        </div>
    </div>
</div>